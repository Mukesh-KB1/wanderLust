<%layout("/layouts/boilerplate.ejs")%>

<body>

    <div class="container filters container">
        <a href="/listings/cateogry/Trending" class="filter box">
            <i class="fa-solid fa-fire"></i>
            <p>Trending</p>
        </a>
        <!-- <a href=""></a> -->
        <a href="/listings/cateogry/Boats" class="filter box">
            <i class="fa-solid fa-ship"></i>
            <p>Boats</p>
        </a>
        <a href="/listings/cateogry/Arctic" class="filter box">
            <i class="fa-solid fa-snowflake"></i>
            <p>Arctic</p>
        </a>
        <a href="/listings/cateogry/Camping" class="filter box">
            <i class="fa-solid fa-tent"></i>
            <p>Camping</p>
        </a>
        <a href="/listings/cateogry/Luxe" class="filter box">
            <i class="fa-solid fa-bell-concierge"></i>
            <p>Luxe</p>
        </a>
        <a href="/listings/cateogry/Beachfront" class="filter box">
            <i class="fa-solid fa-umbrella-beach"></i>
            <p>Beachfront</p>
        </a>
        <a href="/listings/cateogry/AmazingPools" class="filter box">
            <i class="fa-solid fa-person-swimming"></i>
            <p>Amazing Pools</p>
        </a>
        <a href="/listings/cateogry/Castle" class="filter box">
            <i class="fa-brands fa-fort-awesome"></i>
            <p>Castle</p>
        </a>
        <a href="/listings/cateogry/Bed&Breakfasts" class="filter box">
            <i class="fa-solid fa-mug-saucer"></i>
            <p>Bed & Breakfasts</p>
        </a>
        <a href="/listings/cateogry/LakeFront" class="filter box">
            <i class="fa-solid fa-water"></i>
            <p>LakeFront</p>
        </a>
        <div class="Tax-button ms-auto ">
            <div class="form-check-reverse form-switch">
              <input class="form-check-input" type="checkbox" id="flexSwitchCheckDefault">
              <label class="form-check-label" for="flexSwitchCheckDefault">Display total after tax</label>
            </div>
        </div>
    </div>    

<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 ">
    <%for(listing of allListings){%>
        <!-- <.%if(listing.category == category) {%> -->
        <a href="/listings/<%=listing._id%>" class="card_link">
            <div class="card listing-card col" >
                <img src="<%=listing.image.url%>" class="card-img-top" style="height: 20rem;" alt="list_image">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text">
                    <b><%=listing.title%><br></b>
                    &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                    <i class="Tax-toggle"> + 12% GST</i>
                  </p>
                </div>
            </div>
        </a>
        <!-- <.%}%> -->
    <%}%>
</div>

</body>